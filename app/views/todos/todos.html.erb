<main class="body__main--root">
  <h1 class="main__h1--app-head">My Todo-list</h1>
  <div>
    <input
      type="text"
      name="todo_text"
      id="todo_text"
      class="input--todo_text"
      placeholder="What's next?"
      required
    />
    <input
      type="date"
      name="due_date"
      id="due_date"
      class="input--due_date"
      required
    />
    <input type="button" value="Add" class="btn--pleasant" />
  </div>
  <%= render partial: "todos-section", locals: {
    title: "Overdue",
    todos: Todo.overdue,
    show_date: true
  } %>
  <%= render partial: "todos-section", locals: {
    title: "Due Today",
    todos: Todo.due_today,
    show_date: false
  } %>
  <%= render partial: "todos-section", locals: {
    title: "Due Later",
    todos: Todo.due_later,
    show_date: true
  } %>
</main>
